<%= form_with model: product, html: {class: "flex flex-col gap-5"} do |form| %>
  <div class="flex gap-5 items-center">
    <%= form.label :name, class: "w-36" %>
    <%= form.text_field :name, class: "rounded-md border-2 border-cyan-700 p-1" %>
  </div>
  <div class="flex gap-5">
    <%= form.label :featured_image, class: "w-36" %>
    <%= form.file_field :featured_image, accept: "image/*" %>
  </div>
  <div class="flex gap-5 items-center">
    <%= form.label :inventory_count, class: "w-36" %>
    <%= form.number_field :inventory_count , class: "rounded-md border-2 border-cyan-700 p-1"%>
  </div>
  <div class="flex flex-col gap-5">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>
  <div class="px-4 py-2 bg-cyan-700 rounded-md text-center">
    <%= form.submit %>
  </div>
<% end %>
